{
	"$schema": "https://json.schemastore.org/tsconfig",

	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"module": "ESNext",
		"target": "ES2020",
		// Comment it out to test the `.mjs` output
		"moduleResolution": "NodeNext",
		"allowJs": true,
		"skipLibCheck": true,
		"outDir": "dist"
	},
	"include": [ "src" ],
	// TODO: Remove this when we moving `wpcom.ts` to the Gravatar codebase
	"exclude": [ "node_modules", "src/wpcom.ts" ]
}
